<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.westendorf.controller.CustomersEditController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nameTextField" layoutX="226.0" layoutY="48.0" promptText="Name" />
            <TextField fx:id="addressTextField" layoutX="226.0" layoutY="82.0" promptText="Address" />
            <TextField fx:id="postalCodeTextField" layoutX="226.0" layoutY="188.0" promptText="Postal Code" />
            <TextField fx:id="phoneTextField" layoutX="226.0" layoutY="223.0" promptText="Phone Number" />
            <Button fx:id="addUpdateButton" layoutX="225.0" layoutY="280.0" mnemonicParsing="false" onAction="#saveCustomer" text="Add/Update" />
            <ComboBox fx:id="countriesCombo" layoutX="226.0" layoutY="117.0" onAction="#updateDivisionsComboBox" prefWidth="150.0" />
            <ComboBox fx:id="divisionCombo" layoutX="225.0" layoutY="153.0" prefWidth="150.0" />
            <Label fx:id="fieldsRequiredLabel" layoutX="226.0" layoutY="254.0" text="All fields are required" textFill="RED" visible="false" />
            <TextField fx:id="idTextField" editable="false" layoutX="226.0" layoutY="14.0" promptText="ID" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
