<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="io.github.westendorf.controller.MenuController">
    <Menu fx:id="menu" mnemonicParsing="false" text="Menu">
        <MenuItem fx:id="dashboardMenuItem" mnemonicParsing="false" onAction="#goToDashboard" text="Dashboard" />
        <MenuItem fx:id="appointmentsMenuItem" mnemonicParsing="false" onAction="#goToAppointments" text="Appointments" />
        <MenuItem fx:id="contactsMenuItem" mnemonicParsing="false" onAction="#goToContacts" text="Contacts" />
        <MenuItem fx:id="customersMenuItem" mnemonicParsing="false" onAction="#goToCustomers" text="Customers" />
    </Menu>
   <Menu mnemonicParsing="false" text="Reports">
     <items>
         <MenuItem fx:id="customerAppointmentsMenuItem" mnemonicParsing="false" onAction="#goToCustomerAppointmentsReport" text="Customer Appointments" />
         <MenuItem fx:id="contactSchedulesMenuItem" mnemonicParsing="false" onAction="#goToContactSchedulesReport" text="Contact Schedules" />
       <MenuItem fx:id="totalsMenuItem" mnemonicParsing="false" onAction="#goToTotalsReport" text="Totals" />
     </items>
   </Menu>
</MenuBar>
